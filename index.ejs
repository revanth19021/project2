<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>to do list app</title>
    <link rel="stylesheet" href="css/styles.css">
</head>

<body>
    <h1>Your to do list</h1>
    <div class="listItemDisplay">
        <%listItems.forEach(function(item) {%>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()">
                    <p>
                        <%= item.name %>
                    </p>
                    <p>
                        <%= item.description %>
                    </p>
                </div>
            </form>
            <%})%>
                <form class="item" action="/" method="post">
                    <input type="text" name="newitemname" placeholder="new item name" autocomplete="off">
                    <input type="text" name="newitemdescription" placeholder="new item description" autocomplete="off">
                    <button type="submit">+</button>
                </form>

    </div>

</body>
<footer>
    copy right @revanth <%= new date().getFullYear();%> all rights reserved

</footer>

</html>